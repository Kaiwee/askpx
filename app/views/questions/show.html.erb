<h1>
	<strong>Title:</strong>
	<%= @question.title %>		
</h1>

<h1>
	<strong>Description:</strong>
	<%= @question.description %>		
</h1>

<h1>
	<strong>Posted by:</strong>
	<%= @username %>		
</h1>

<div class="well">
	<%= render 'answers/form' %>
</div>

<h2>Users Answers</h2>
<%  @answers.each do |answer| %>
<div class="col-md-3">
  <div class="well">
          <h3><%= @user.name %></h3>
          <p> <%= answer.description %> </p>
          <p><%= link_to 'Delete answer', answer, method: :delete, data: {confirm: 'Are you sure?' } %></p>
  </div>
</div>  
<% end %>