<h3 id="notice"><%= notice %></h3>

<%= form_tag search_path, method: "get" do %>
  <div class="col-lg-10 col-md-10"> <%= text_field_tag(:search, params[:search], placeholder:"Search users", class:"form-control") %> </div>
  <div class="col-lg-2 col-md-2"><%= submit_tag("Search", class:"btn btn-danger")%></span></div>
<% end %>

<div class="container">
  <div class="hero-header">
    <div class="main-text">AskPx</div>
    <div class="sub-text">A place to consult pharmacists</div>
  </div>

<h3>Questions Asked by Users</h3>

  <%  @questions.each do |question| %>
<div class="col-md-3">
  <div class="well">
          <p><strong>Title</strong> <br> <%= question.title %> </p>
          <p><strong>Description</strong> <br> <%= question.description %> </p>
          <p><strong>Posted by </strong><%= link_to question.user.name, user_path(question.user) %></p>
          <p><%= question.created_at.in_time_zone('Kuala Lumpur').strftime("%d-%m-%Y at %l:%M %p") %></p>
          <p> <%= link_to 'Show', question_path(question) %> </p>
  </div>
</div>  
<% end %>