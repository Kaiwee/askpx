<h3 id="notice"><%= notice %></h3>

<div class="container">
  <div class="hero-header">
    <div class="main-text">AskPx</div>
    <div class="sub-text">A place to consult pharmacists</div>
  </div>

<h3>Questions Asked by Users</h3>

  <%  @questions.each do |question| %>
<div class="col-md-3">
  <div class="well">
          <p><strong>Title</strong> <br> <%= question.title %> </p>
          <p><strong>Description</strong> <br> <%= question.description %> </p>
          <p><strong>Posted by </strong><%= link_to question.user.name, user_path(question.user) %></p>
          <p><%= question.created_at.strftime("%Y-%m-%d") %></p>
          <p> <%= link_to 'Show', question_path(question) %> </p>
  </div>
</div>  
<% end %>