<nav class="menu">
	<ul class="active">
		<li class="current-item"><%= link_to "AskPx", root_url %></li>

		<% if !logged_in? %>
		<li><%= link_to "Ask a question", sign_in_path %></li>
		<% end %>

		<% if logged_in? %>
			<li><%= link_to "Ask a question", new_question_path %></li>
			<li><%= link_to "My Questions", questions_path %></li>		
			<li><%= link_to "Inbox", conversations_path, class: "item" %></li>
			<li><%= link_to "Sign out", sign_out_path, method: :delete, data: { confirm: 'Sign out?' } %></li>

			<% if !current_user.avatar.present? %>
				<li><%= link_to current_user.name, user_path(current_user) %></li>
			<% else %>
				<li><%= link_to image_tag(current_user.avatar_url(:thumb).to_s, :style => "border-radius: 50%"), user_path(current_user) %></li>
			<% end %>

		<% else %>
			<li><%= link_to "Login", sign_in_path %></li>
			<li><%= link_to "Signup", sign_up_path %></li>
		<% end %>
	</ul>
</nav>